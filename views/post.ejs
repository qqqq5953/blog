<% extend('./layouts/layout')%>

<nav aria-label="breadcrumb" class="row">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/" class="">Home</a>
    </li>
    <li class="breadcrumb-item pl-0 text-info" aria-current="page">
      <a href="/?category=html&page=1" class=""
        ><%= categories[article.category].name || "未分類" %></a
      >
    </li>
    <li class="breadcrumb-item pl-0 text-secondary" aria-current="page">
      <%- article.title %>
    </li>
  </ol>
</nav>

<div class="row justify-content-center">
  <div class="col-md-9">
    <!-- artical header -->
    <h1 class="text-dark"><%- article.title %></h1>
    <div class="d-flex small py-2">
      <div class="mr-2">
        <i class="fa fa-user-o" aria-hidden="true"></i> 卡斯伯
      </div>
      <div class="mr-2 text-secondary">
        <span class="fa fa-clock-o"></span>
        <%- article.updateTime %>
      </div>
      <div class="text-primary">
        <i class="fa fa-tag" aria-hidden="true"></i>
        <span> <%= categories[article.category].name || "未分類" %></span>
      </div>
    </div>
    <article class="text-dark post mb-4">
      <p><%- article.content %></p>
    </article>
    <!-- 留言 -->
