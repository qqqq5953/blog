<% extend('./layouts/layout')%>

<nav aria-label="breadcrumb" class="row">
  <ol class="breadcrumb bg-transparent">
    <li class="breadcrumb-item">
      <a href="/">Home</a>
    </li>
    <li class="breadcrumb-item pl-0 text-info" aria-current="page">
      <a href="/?category=<%= categories[article.category].name %>&page=1"
        ><%= categories[article.category].name || "未分類" %></a
      >
    </li>
    <li
      class="breadcrumb-item pl-0 text-secondary d-none d-sm-block"
      aria-current="page"
    >
      <%- article.title %>
    </li>
  </ol>
</nav>

<div class="row justify-content-center">
  <div class="col-md-10">
    <!-- artical header -->
    <h1 class="text-dark"><%- article.title %></h1>
    <div class="d-flex small py-3">
      <div class="mr-2">
        <i class="fa fa-user-o" aria-hidden="true"></i> <%- article.arthor %>
      </div>
      <div class="text-info">
        <i class="fa fa-tag" aria-hidden="true"></i>
        <span> <%= categories[article.category].name || "未分類" %></span>
      </div>
      <div class="text-secondary ml-auto">
        <span class="fa fa-clock-o"></span>
        <%- article.updateTime %>
      </div>
    </div>
    <article class="text-dark post mb-4 border-top">
      <p><%- article.content %></p>
    </article>
    <!-- 留言 -->
    <div class="card mb-3">
      <div class="card-body">
        <div id="disqus_thread"></div>
        <script>
          /**
           *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
           *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables    */
