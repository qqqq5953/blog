<% extend('./layouts/layout')%>

<div class="container">
  <div class="hex-blog">
    <nav class="breadcrumb pl-0">
      <a class="breadcrumb-item text-primary" href="#">Home</a>
      <a class="breadcrumb-item text-primary" href="#"> 沒有分類 </a>
      <span class="breadcrumb-item active">補充課程：Sass 與 includePaths</span>
    </nav>
    <div class="row justify-content-center">
      <div class="col-md-9">
        <!-- artical header -->
        <h1 class="text-primary"><%- article.title %>s</h1>
        <div class="d-flex flex-row text-secondary small">
          <div class="p-2">
            <i class="fa fa-user-o" aria-hidden="true"></i> 卡斯伯
          </div>
          <div class="p-2"><%- article.updateTime %></div>
          <div class="p-2">
            <i class="fa fa-tag" aria-hidden="true"></i>
            <a href="" class="text-info">
              <%= categories[article.category].name %>
            </a>
          </div>
        </div>
        <article class="text-dark post mb-4">
          <p><%- article.content %></p>
        </article>
        <!-- 留言 -->
        <div class="card mb-3">
          <div class="card-body"></div>
        </div>
      </div>
    </div>
  </div>
</div>
